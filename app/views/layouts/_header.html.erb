<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#0097b2">
    <div class="container">
      <a class="navbar-brand" href="/">
        <%= image_tag 'BEVERAGE (2).png', size: "100x100" %>
      </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <!-- カスタマーのログイン時 -->
        <% if customer_signed_in? %>
          <li>
            <%= link_to customer_path(current_customer),class: 'nav-link text-light' do %>
              マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to drinks_path,class: 'nav-link text-light' do %>
              ドリンク一覧
            <% end %>
          </li>
          <li>
            <%= link_to customers_path,class: 'nav-link text-light' do %>
              会員一覧
            <% end %>
          </li>
          <li>
            <%=  link_to new_drink_path ,class: 'nav-link text-light' do %>
              新規投稿
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-light' do %>
              ログアウト
            <% end %>
          </li>
          <!--会員の検索フォーム -->
          <%= render 'layouts/customer_search_form' %>
        <!-- 管理者のログイン時 -->
        <% elsif admin_signed_in? %>
          <li>
            <%=  link_to admin_customers_path,class: 'nav-link text-light' do %>
              会員一覧
            <% end %>
          </li>
          <li>
             <%=  link_to admin_drinks_path,class: 'nav-link text-light' do %>
              ドリンク一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-light' do %>
              ログアウト
            <% end %>
          </li>
          <!--管理者の検索フォーム -->
          <%= render 'layouts/admin_search_form' %>
        <!--ログインしてない時 -->
        <% else %>
          <li>
            <%= link_to about_path,class: 'nav-link text-light' do %>
              プロフィール
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path,class: 'nav-link text-light' do %>
              ログイン
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path,class: 'nav-link text-light' do %>
              新規登録
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>