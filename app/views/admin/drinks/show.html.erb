<div class="container">
  <div class="row">
    <div class="col">
      <h1>ドリンクの詳細</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <br>
        <td>
          <% if @drink.image.attached? %>
        　  <%= image_tag @drink.image, size: "300x300" %>
          <% else %>
        　  <%= image_tag 'no_image.jpg', size: "300x300" %>
          <% end %>
        </td>
    </div>
    <div class="col">
      <dl class="dl">
        <dt>ドリンク名</dt>
          <dd><%= @drink.name %></dd>
        <dt>ドリンクの説明</dt>
          <dd><%= @drink.introduction %></dd><br>
          <dd><%= link_to '削除', admin_drink_path(@drink.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger"%></dd>
          <dd><%= link_to '戻る', admin_drinks_path, class:"btn btn-info" %></dd>
      </dl>
    </div>
  </div>
</div>