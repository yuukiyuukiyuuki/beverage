<div class="container">
   <h1>会員詳細情報</h1>
  <div class="row">
    <div class="col-6">
      <% if admin_signed_in? %>
      <table class="table table-bordered">
        <tbody>
          <tr class="table-active">
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><% if @customer.is_deleted == true %>
                  <%= "退会" %>
                <% else %>
                  <%= "有効" %>
                <% end %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
    <%= link_to "退会", confirm_withdraw_admin_customers_path(customer_id: @customer.id), class: "btn btn-outline-danger" %>
    <%= link_to "戻る", admin_customer_path(@customer.id), class: "btn btn-outline-info" %>
</div>