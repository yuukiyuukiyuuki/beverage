<div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>登録情報</h2>
    <%= form_with model: @customer, local:true do |f| %>
    <div class="form-group">
      <%= f.label :名前 %>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
   <div class="form-group">
      <%= f.label :写真 %>
      <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
    </div>
    <div class="form-group">
      <%= f.label :自己紹介 %>
      <%= f.text_area :introduction, class: "form-control introduction" %>
    </div>
    <div class="form-group">
      <%= f.submit "変更する", class:"btn btn-info" %>
    </div>
    <% end %>
</div>
