<div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>投稿の編集</h2>
    <%= form_with model: @drink, local:true do |f| %>
  <div class="form-group">
    <%= f.label :ドリンク名 %>
    <%= f.text_field :name, class: "form-control name" %>
  </div>
  <div class="form-group">
    <%= f.label :ドリンクの写真 %>
    <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :ドリンクの説明 %>
    <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  <!--レビューの星 -->
    <div class="form-group row" id="star">
      <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
      <%= f.hidden_field :star, id: :review_star %>
　　</div>
    <script>
　　$('#star').empty();
    $('#star').raty({
      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
 　 　　scoreName: 'drink[star]',
      half: false,
    });
    </script>
  <div class="form-group">
    <%= f.submit "変更する", class: "btn btn-info" %>
  </div>
  <% end %>
  <div class="form-group">
    <%= link_to '戻る', customer_path(@customer), class: "btn btn-info", style: "#ccc; width: 90px;" %>
  </div>
  </div>
</div>