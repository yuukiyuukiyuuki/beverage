<dd>
  <% if drink.favorited?(current_customer) %>
    <%= link_to drink_favorites_path(drink.id), method: :delete, local: true do %>
  <i class="far fa-heart">♥<%= drink.favorites.count %></i>
    <% end %>
  <% else %>
    <%= link_to drink_favorites_path(drink.id), method: :post, local: true do %>
