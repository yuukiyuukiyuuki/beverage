<% drink.drink_comments.each do |drink_comment| %>
  <div class="comments-index mb-2">
    <tr>
      <td>
        <%= link_to customer_path(drink_comment.customer) do %>
          <% if drink_comment.customer.image.attached? %>
            <%= image_tag drink_comment.customer.image, size:"50x50" %>
          <% else %>
      　     <%= image_tag 'no_image.jpg', size: "50x50" %>
          <% end %><br>
            <%= drink_comment.customer.name %>
        <% end %>
          <%= drink_comment.created_at.strftime('%Y/%m/%d') %>
      </td>
      <div class="d-flex">
        <td><%= drink_comment.comment %></td>
        <td>
          <% if drink_comment.customer == current_customer %>
        <div class="comment-delete">
          <%= link_to "削除", drink_drink_comment_path(drink_comment.drink, drink_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
        </div>
          <% end %>
        </td>
      </div>
    </tr>
  </div>
<% end %>