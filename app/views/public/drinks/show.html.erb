<div class="container">
  <div class="row">
    <div class="col">
      <h1>ドリンクの詳細</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <tr>
        <th>
          <% if @drink.image.attached? %>
      　    <%= image_tag @drink.image, size: "300x300" %>
          <% else %>
      　    <%= image_tag 'no_image.jpg', size: "300x300" %>
          <% end %>
        </th><br>
        <th>会員名：<%= @customer.name %></th>
      </tr>
    </div>
    <div class="col">
      <dl class="dl">
        <dt>ドリンク名</dt>
          <dd><%= @drink.name %></dd>
        <dt>ドリンクの説明</dt>
          <dd> <%= @drink.introduction %></dd><br>
        <!--いいね機能 -->
        <%= render 'drink_favorite', drink: @drink %>
        <!--コメント機能-->
        <%= render 'drink_comment', drink: @drink %>
        <!-- コメントフォーム -->
        <%= render 'form', drink: @drink, drink_comment: @drink_comment %>
      </dl>
    </div>
  </div>
</div>